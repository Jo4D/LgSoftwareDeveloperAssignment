@{
    Layout = "_Layout";
}
@model List<DeviceCategory>
<div class="table-responsive">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-8"><h2>Devices <b>Categories</b></h2></div>
                <div class="col-sm-4">
                    <a class="btn btn-info add-new" asp-action="Add" asp-controller="DeviceCategories"> Add New</a>
                </div>
            </div>
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Color</th>
                    <th>Brand</th>
                    <th>Display</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach(var i in Model){
                <tr>
                     <td>@i.DeviceCategoryName</td>
                     <td>@i.DeviceCategoryColor</td>
                    <td>@i.DeviceCategoryBrand</td>
                    <td>@i.DeviceCategoryDisplay</td>
                    <td>
                     <a asp-action="Update" asp-controller="DeviceCategories"><i class="bi bi-pencil"></i>Update</a>
                     <a asp-action="Delete" asp-controller="DeviceCategories">Delete</a>
                    </td>
                </tr>
                }
                }
            </tbody>
        </table>
    </div>
</div>