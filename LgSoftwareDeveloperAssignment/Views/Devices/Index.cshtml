@{
    Layout = "_Layout";
}
@model List<Device>
<div class="table-responsive">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-8"><h2>Devices <b>Categories</b></h2></div>
                <div class="col-sm-4">
                    <a class="btn btn-info add-new" asp-action="Add" asp-controller="Devices"> Add New</a>
                </div>
            </div>
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Serial Number</th>
                    <th>Date</th>
                    <th>Processor</th>
                    <th>Memo</th>
                    <th>Mac</th>
                    <th>Ip</th>
                    <th>Actions</th>

                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var i in Model)
                    {
                        <tr>
                            <td>@i.DeviceName</td>
                            <td>@i.DeviceSerialNumber</td>
                            <td>@i.DeviceAcquisitionDate</td>
                            <td>@i.DeviceProcessor</td>
                            <td>@i.DeviceMemo</td>
                            <td>@i.DeviceMacAddress</td>
                            <td>@i.DeviceIpAddress</td>
                            <td>
                                <a asp-action="Update" asp-controller="Devices"><i class="bi bi-pencil"></i>Update</a>
                                <a asp-action="Delete" asp-controller="Devices">Delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>